@model List<FastChicken.Models.OrderItem>

@if (Model.Count != 0)
{
    <div class="row mb-2" id="orderDetails">
        <ul class="list-group list-group-flush p-0">
            @foreach (var item in Model)
            {
                <li class="list-group-item p-2 my-2">
                    <div class="container-fluid p-0">
                        <div class="row d-flex flex-row justify-content-between align-items-center">
                            <div class="col-4">
                                <div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="text-primary"><b>@item.Name</b></label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label><b>$@item.Price</b></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                @if (item.idSide != -1)
                                {
                                    <div class="row justify-content-center">
                                        <label>@item.Side</label>
                                    </div>
                                }
                                @if (item.idDrink != -1)
                                {
                                    <div class="row justify-content-center">
                                        <label>@item.Drink</label>
                                    </div>
                                }
                            </div>
                            @*@{
                                var count = 1;
                            }
                            <div class="col-3 d-flex justify-content-center align-items-center">
                                <button class="btn btn-primary mr-2" onclick="if ($('#count').val() > 1) { $('#count').val(parseInt($('#count').val())-1); } updateButtons();" id="minusButton" disabled>-</button>
                                <input id="count" type="text" class="text-center" value="@count" readonly="readonly" style="width:40px; border: none;" />
                                <button class="btn btn-primary ml-2" onclick="$('#count').val(parseInt($('#count').val())+1); updateButtons();" id="plusButton">+</button>
                            </div>*@
                            <div class="col-2 d-flex justify-content-center">
                                @*<button class='btn btn-success mx-1' onclick="ModalUpdateItem('@item.OrderItemId')">
                <i class="bi bi-pencil-square"></i>
            </button>*@
                                <button class='btn btn-danger mx-1' onclick="DeleteItem('@item.OrderItemId')">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>

            }
        </ul>
    </div>

    <div class="row mb-3">
        <div class="col text-center">
            <input type="radio" class="btn-check" name="delivery" id="ToGo" autocomplete="off">
            <label class="fw-semibold btn btn-sm btn-outline-primary py-2 px-4 shadow-sm rounded" for="ToGo">Para Llevar</label>
        </div>
        <div class="col text-center">
            <input type="radio" class="btn-check" name="delivery" id="Here" autocomplete="off" checked>
            <label class="fw-semibold btn btn-sm btn-outline-primary py-2 px-4 shadow-sm rounded" for="Here">Comer Aca</label>
        </div>
    </div>

    <div class="row mb-3 border rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
            <div class="p-2">
                <h4 class="fw-bold text-uppercase text-success">Total</h4>
            </div>
            <div class="p-2">
                <h4 class="fw-bold text-uppercase text-success">$@ViewBag.Total</h4>
            </div>
        </div>
    </div>
    <div class="row justify-content-end mb-1">
        <button class='btn btn-sm btn-danger col-5 p-2 lead fw-bold' onclick="ClearItems();">Eliminar Todo<i class="mx-1 bi bi-trash3"></i></button>
    </div>
}
else
{
    <div class="row mb-3" id="noHayItems">
        <p class="lead text-muted text-center">No hay items</p>
    </div>
}

