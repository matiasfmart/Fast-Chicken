@{
    Layout = "_LayoutAdmin";

    <div class="container mt-4">
        <div class="row d-flex justify-content-between">
            <div class="col">
                <h1>Control de Stock &nbsp;<i class="bi bi-box-seam-fill"></i> > Combos > @ViewBag.Combo.Name</h1>
            </div>
        </div>
    </div>
    <div class="container shadow bg-white mt-4">
        <div class="row px-4">
        <p>
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="Id" class="form-label">Id</label>
                        <input type="text" class="form-control" id="Id" value="@ViewBag.Combo.ComboId" disabled>
                </div>
                <div class="col-md-6">
                    <label for="Type" class="form-label">Tipo</label>
                        <input type="text" class="form-control" id="Type" value="@ViewBag.Combo.Type" disabled>
                </div>
                <div class="col-md-6">
                    <label for="Name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="Name" value="@ViewBag.Combo.Name">
                </div>
                <div class="col-md-6">
                    <label for="Price" class="form-label">Precio</label>
                        <input type="number" class="form-control" id="Price" value="@ViewBag.Combo.Price">
                </div>
                <div class="col-12">
                    <label for="Description" class="form-label">Descripción</label>
                        <textarea class="form-control" id="Description">@ViewBag.Combo.Description</textarea>
                </div>
                </form>
            </p>
        </div>
    </div>
    <div class="container shadow bg-white mt-4">
        <div class="row px-4">
            <p>
            <div class="col-md-6">
                <h6>Bebidas</h6>
                <div class="col-md-6">
                    <label for="Cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="CantidadBebidas" value="@ViewBag.CantidadBebidas">
                </div>
                <div class="col-md-6">

                    <div class="panel panel-primary">
                        <div class="panel-heading">Seleccionar</div>
                    </div>
                    <div class="panel-body">
                        <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="-1" id="bebidas_indistinto" name="bebidas[]" @(ViewBag.DictBebidas.ContainsKey(-1) ? "checked" : "")>
                            <label class="form-check-label" for="bebidas_indistinto">
                                Indistinto
                            </label>
                        </div>
                        @foreach (var drink in ViewBag.Drinks)
                        {
                            <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="bebidas_@drink.idDrink" value="@drink.idDrink" name="bebidas[]" @(ViewBag.DictBebidas.ContainsKey(drink.idDrink) ? "checked" : "")>
                                <label class="form-check-label" for="bebidas">
                                    @drink.Name
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h6> Guarniciones </h6>
                <div class="col-md-6">
                    <label for="Cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="CantidadGuarniciones" value="@ViewBag.CantidadGuarniciones">
                </div>
                <div class="col-md-6">
                    <label for="selGuarniciones" class="form-label">Seleccionar</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="-1" id="guarniciones_indistinto" name="guarniciones[]" @(ViewBag.DictGuarniciones.ContainsKey(-1) ? "checked" : "")>
                            <label class="form-check-label" for="guarniciones_indistinto">
                                Indistinto
                            </label>
                        </div>
                        @foreach (var side in ViewBag.Sides)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="guarniciones_@side.idSide" value="@side.idSide" name="guarniciones[]" @(ViewBag.DictGuarniciones.ContainsKey(side.idSide) ? "checked" : "")>
                                <label class="form-check-label" for="guarniciones">
                                    @side.Name
                                </label>
                            </div>
                        }
                </div>
            </div>
            </p>
        </div>
        <div class="row px-4">
            <p>
            <div class="col-md-12">
                <h6> Productos </h6>
                <div class="col-md-12">
                    <label for="Cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="CantidadProductos" value="@ViewBag.CantidadProductos">
                </div>
                <div class="col-md-12">
                        <label for="selProductos" class="form-label">Seleccionar</label>
                        @foreach (var product in ViewBag.Products)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="productos_@product.idProduct" value="@product.idProduct" name="productos[]" @(ViewBag.DictProductos.ContainsKey(product.idProduct) ? "checked" : "")>
                                <label class="form-check-label" for="productos">
                                    @product.Name
                                </label>
                            </div>
                        }
                </div>
            </div>
        </p>
        </div>
    </div>

    <div class="container shadow bg-white mt-4">
        <div class="row px-4">
            <p>
            <div class="col-12">
                <button type="button" onclick="GrabarCombo()" class="btn btn-primary">Grabar</button>
                <a href="@Url.Action("Combos", "Admin")">
                <button type="button" class="btn btn-danger">Volver</button>
                </a>
            </div>
            </p>
        </div>
    </div>

}